{
  "type": "object",
  "title": "BingAds extractor configuration",
  "required": [
    "authorization"
  ],
  "properties": {
    "authorization": {
      "type": "object",
      "title": "Authorization",
      "description": "Parameters used for authorization",
      "format": "table",
      "required": [
        "client_id",
        "#developer_token",
        "customer_id",
        "account_id"
      ],
      "properties": {
        "client_id": {
          "type": "string",
          "title": "Client ID",
          "description": "The client ID",
          "propertyOrder": 1000
        },
        "#developer_token": {
          "type": "string",
          "title": "Developer Token",
          "description": "Your developer token",
          "format": "password",
          "propertyOrder": 2000
        },
        "environment": {
          "type": "string",
          "title": "Environment",
          "enum": [
            "sandbox",
            "production"
          ],
          "default": "production",
          "description": "Environment to use.",
          "propertyOrder": 3000
        },
        "customer_id": {
          "type": "integer",
          "title": "Customer ID",
          "description": "Customer identifier of your BingAds account.",
          "propertyOrder": 4000
        },
        "account_id": {
          "type": "integer",
          "title": "Account ID",
          "description": "Account identifier.",
          "propertyOrder": 5000
        }
      }
    }
  }
}